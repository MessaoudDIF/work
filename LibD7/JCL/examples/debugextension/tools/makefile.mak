#--------------------------------------------------------------------------------------------------#
#                                                                                                  #
# JCL Debug extension tools                                                                        #
#                                                                                                  #
#--------------------------------------------------------------------------------------------------#

!ifndef ROOT
ROOT = $(MAKEDIR)\..
!endif
#---------------------------------------------------------------------------------------------------
SRC = ..\..\..\Source
DCU = ..\..\..\Dcu
BIN = ..\..\..\Bin
MAP = $(BIN)\$&.map
DRC = $&.drc
#---------------------------------------------------------------------------------------------------
MAKE = $(ROOT)\bin\make.exe -$(MAKEFLAGS) -f$**
DCC = $(ROOT)\bin\dcc32.exe -e$(BIN) -i$(SRC) -n$(DCU) -q -r$(SRC) -u$(SRC) -w $**
BRCC = $(ROOT)\bin\brcc32.exe $**
#---------------------------------------------------------------------------------------------------
default: \
  MakeJclDbg.exe \
  MapToJdbg.exe \
  TlbToMap.exe
#---------------------------------------------------------------------------------------------------

MakeJclDbg.exe: MakeJclDbg.dpr
  $(DCC)

MapToJdbg.exe: MapToJdbg.dpr
  $(DCC)

TlbToMap.exe: TlbToMap.dpr
  $(DCC)

